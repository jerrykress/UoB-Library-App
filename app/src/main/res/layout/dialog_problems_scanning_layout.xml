<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/dialog_top">

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A list of solutions..."
            android:textColor="#ff000000"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sf_display_medium"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_info1"
            android:text=">Try scanning the last page of the book."
            android:textSize="16dp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sf_display_medium"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_info2"
            android:text=">Open the last page and scan the RFID tag."
            android:textSize="16dp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sf_display_medium"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_info3"
            android:text=">Use the self check-out machine."
            android:textSize="16dp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sf_display_medium"
            android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>